<%= form_for(@integration, :remote => true, :data  => {:abide => ''}) do |f| %>
<% if @integration.errors.any? %>
<div id="error_explanation">
  <h2><%= pluralize(@integration.errors.count, "error") %>
  prohibited this integration from being saved:</h2>
  <ul>
    <% @integration.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
    <% end %>
  </ul>
</div>
<% end %>
<div class="row">
  <div class="small-3 columns">
    <%= f.label :title, :class => 'right inline' %>
  </div>
  <div class="small-9 columns">
    <i class="label info lifebuoy">Set the integration title.</i>
    <%= f.text_field :title, :tabindex => autotab %>
    <small class="error">Integration title is required and must be a string.</small>
  </div>
</div>
<div class="row">
  <div class="small-3 columns">
    <%= f.label 'description', :class => 'right inline' %>
  </div>
  <div class="small-9 columns">
    <i class="label info lifebuoy">Provide a general integration description.</i>
    <%= f.text_area :help, :tabindex => autotab %>
  </div>
</div>
<% end %>
<div class="row">
  <div class="small-12 columns right">
    <%= link_to 'Next', '#', :class => 'button small info radius integration_save icon-next right', :tabindex => autotab %>
  </div>
</div>