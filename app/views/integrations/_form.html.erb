<%= form_for(@integration, :remote => true) do |f| %>
<% if @integration.errors.any? %>
<div id="error_explanation">
  <h2><%= pluralize(@integration.errors.count, "error") %>
  prohibited this integration from being saved:</h2>
  <ul>
    <% @integration.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
    <% end %>
  </ul>
</div>
<% end %>
<div class="row">
  <div class="small-3 columns">
    <%= f.label :title, :class => 'right inline' %>
  </div>
  <div class="small-9 columns">
    <%= f.text_field :title, :tabindex => autotab %>
  </div>
</div>
<div class="row">
  <div class="small-3 columns">
    <%= f.label 'description', :class => 'right inline' %>
  </div>
  <div class="small-9 columns">
    <%= f.text_area :help, :tabindex => autotab %>
  </div>
</div>
<div class="row">
  <div class="small-2 columns actions right">
    <ul class="button-group radius right">
      <li><%= link_to 'Back', :back, :class => 'small button secondary icon-back', :tabindex => autotab %></li>
      <li><%= link_to 'Save', '#', :class => 'button small success radius integration_save icon-save', :tabindex => autotab %></li>
    </ul>
  </div>
</div>
<% end %>