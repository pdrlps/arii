      <body id="home">
        <div class="row fixed animated fadeInDown center centered centered-text" id="home_nav">
          <div class="small-1 columns left text-left icon-ariip dark_red">
            &nbsp;
          </div>
          <div class="small-9 columns">
            <ul class="inline-list center centered-text" id="home_list ">
              <li><%= link_to 'Features', {:controller => '/features', :action => 'index'}, :class => '' %></li>
              <li><%= link_to 'How it works', {:controller => '/how', :action => 'index'}, :class => '' %></li>
              <li><%= link_to 'Use cases', {:controller => '/how', :action => 'index'}, :class => '' %></li>
              <li><%= link_to 'About', {:controller => '/about', :action => 'index'}, :class => '' %></li>
              <li><%= link_to 'Contact', {:controller => '/contact', :action => 'index'}, :class => '' %></li>
            </ul>
          </div>
          <div class="small-2 columns right text-right">
            <%= link_to('Sign in',new_user_session_path,:class => 'small button info radius icon-user right text-right') %>
          </div>
        </div>
        <!-- navbar end -->
        <!-- Start main content -->
        <div class="row" id="home_content">
          <div class="small-12 columns">
            <%= yield %>
          </div>
        </div>
        <br />
        <!-- Finish main content -->
        <!-- Footer -->
        <div class="row">
          <div class="small-12 medium-4 large-4 columns center">
            <i class="icon-ariip gigantic dark_grey"></i>
            <br />
            <small>&copy; Copyright 2015 <a href="http://ariip.com" title="ARiiP">http://ariip.com</a></small>
          </div>
          <div class="small-6 medium-4 large-4 columns">
            <h5 class="subheader">Links</h5>
            <ul class="no-bullet">
              <li>Pricing</li>
            </ul>
          </div>
          <div class="small-6 medium-4 large-4 columns right">
            <h5 class="subheader">Follow us</h5>
            <ul class="no-bullet">
              <li class="icon-twitter">Twitter</li>
            </ul>
