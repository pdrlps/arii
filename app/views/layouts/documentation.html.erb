        <!-- Set the viewport width to device width for mobile -->
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <%= favicon_link_tag 'favicon.ico' %>
        <title><%= content_for?(:title) ? yield(:title) : "Docs - #{ENV["APP_TITLE"]}" %></title>
        <%= stylesheet_link_tag    "application" %>
        <%= stylesheet_link_tag    "animate.min" %>
        <%= javascript_include_tag "custom.modernizr" %>
        <%= csrf_meta_tags %>
      </head>
      <body>
        <div class="fixed ">
          <nav class="top-bar" data-topbar role="navigation" data-options="is_hover: false">
            <ul class="title-area">
              <!-- Title Area -->
              <li class="name">
                <a href="<%= root_url %>" class="icon-ariip logo dark_red"></a>
              </li>
              <li class="toggle-topbar menu-icon"><a href="#" title="<%= ENV["APP_TITLE"] %>"><span>menu</span></a></li>
            </ul>
            <section class="top-bar-section application-nav">
              <ul class="left">
                <li><%= link_to 'Features', {:controller => '/features', :action => 'index'}, :class => 'icon-features' %></li>
                <li><%= link_to 'How it works', {:controller => '/how', :action => 'index'}, :class => 'icon-how' %></li>
                <li><%= link_to 'Use cases', {:controller => '/use_cases', :action => 'index'}, :class => 'icon-usecases' %></li>
                <li><%= link_to 'About', {:controller => '/about', :action => 'index'}, :class => 'icon-about' %></li>
                <li><%= link_to 'Contact', {:controller => '/contact', :action => 'index'}, :class => 'icon-mail' %></li>
              </ul>
              <ul class="right">
                <li><%= link_to('Documentation'.html_safe, {:controller => '/docs'}, :id => '',:class => 'icon-docs') %></li>
                <li><%= link_to('FAQ'.html_safe, {:controller => '/faq'}, :id => '',:class => 'icon-faq') %></li>
                <li class="divider"></li>
                <li class="has-tip radius" data-tooltip title="User"><%= user_signed_in? ? link_to("Hi #{(current_user.name ||= current_user.username)}!".html_safe, {:controller => 'dashboard'},:class => 'icon-dashboard sidebar-icon') : link_to('Sign in',new_user_session_path) %></li>
              </ul>
            </section>
          </nav>
          </div><!-- End Top Bar -->
          <!-- Start main content -->
          <div class="row content  " id="content">
            <div class="small-12 columns">
              <%= yield %>
            </div>
          </div>
          <!-- Finish main content -->
          <%= javascript_include_tag "application" %>
