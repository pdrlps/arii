        <!-- Set the viewport width to device width for mobile -->
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <%= favicon_link_tag 'favicon.ico' %>
        <title><%= content_for?(:title) ? yield(:title) : ENV["APP_TITLE"] %></title>
        <%= stylesheet_link_tag    "application" %>
        <%= stylesheet_link_tag    "animate.min" %>
        <%= javascript_include_tag "custom.modernizr" %>
        <%= csrf_meta_tags %>
      </head>
      <body>
        <div class="fixed">
          <nav class="top-bar" data-topbar role="navigation" data-options="is_hover: false">
            <ul class="title-area">
              <!-- Title Area -->
              <li class="name">
                <h1><a href="<%= root_url %>" class="logo icon-ariip"></a></h1>
              </li>
              <li class="toggle-topbar menu-icon"><a href="#" title="<%= ENV["APP_TITLE"] %>"><span>menu</span></a></li>
            </ul>
            <section class="top-bar-section application-nav">
              <ul class="left">
              </ul>
              <ul class="right">
                <li><a href="#" class="icon-lifebuoy"></a></li>
                <li class="has-dropdown">
                  <a href="#" class="icon-resources">&nbsp;</a>
                  <ul class="dropdown">
                    <li><%= link_to 'How', {:controller => '/how', :action => 'index'}, :class => 'icon-how' %></li>
                    <li><%=  link_to('Documentation'.html_safe, {:controller => '/docs'}, :id => '',:class => 'icon-docs') %></li>
                    <li><%= link_to('FAQ'.html_safe, {:controller => '/docs'}, :id => '',:class => 'icon-faq') %></li>
                  </ul>
                </li>
                <li class="divider"></li>
                <li class="has-tip radius" data-tooltip title="User"><%= user_signed_in? ? link_to("Hi #{(current_user.name ||= current_user.username)}!".html_safe, edit_user_registration_path, :id => 'sidebar_details',:class => 'icon-user sidebar-icon') : link_to('Sign in',new_user_registration_path) %></li>
              </ul>
            </section>
          </nav>
          </div><!-- End Top Bar -->
          <!-- Start main content -->
          <div class="sidebar">
            <%= render partial: "helper/sidebar"  %>
          </div>
          <div class="content_application">
            <div class="row animated fadeIn" id="content">
              <%= yield %>
            </div>
          </div>
          <br />
          <!-- Finish main content -->
          <!-- feedback -->
          <div id="feedback">
            <a href="#" data-reveal-id="give_feedback"  class="icon-feedback">&nbsp;</a>
          </div>
          <%= render partial: "helper/feedback"  %>
          <%= javascript_include_tag "application" %>
          <%= yield :javascript_includes %>
