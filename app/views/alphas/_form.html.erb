<%= form_for(@alpha, :remote => true) do |f| %>
  <% if @alpha.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@alpha.errors.count, "error") %> prohibited this alpha from being saved:</h2>

      <ul>
      <% @alpha.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<h5 class="subheader">Be an early tester</h5>
  <div class="row">
    <div class="small-12 columns">
      <div class="row">
        <div class="small-1 columns">
          <%= f.label :name, :class => 'right inline' %>
        </div>
        <div class="small-11 columns">
           <%= f.text_field :name %>
        </div>
      </div>
    </div>
  </div>
    <div class="row">
    <div class="small-12 columns">
      <div class="row">
        <div class="small-1 columns">
          <%= f.label :email, :class => 'right inline' %>
        </div>
        <div class="small-11 columns">
           <%= f.email_field :email %>
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="small-12 columns">
      <div class="row">
        <div class="small-1 columns">
          <%= f.label :job, :class => 'right inline' %>
        </div>
        <div class="small-11 columns">
           <%= f.select :job, options_for_select([['Web Developer', 'webdeveloper'], ['Software Engineer', 'softwareengineer'], ['EAI Consultant','eaiconsultant']]), {}, {:tabindex => autotab} %>
        </div>
      </div>
    </div>
  </div>
<div class="row">
  <div class="small-12 columns right">
    <%= f.submit 'Submit Request', :class => 'button right success small radius' %>
  </div>
</div>
<% end %>
