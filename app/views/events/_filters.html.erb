<div class="row">
  <div class="small-12 medium-2 large-2 columns">
    <label for="inputs" class="right inline">Input</label>
  </div>
  <div class="small-12 medium-4 large-4 columns">
    <i class="label info lifebuoy">Select the Input from which you want to see the events.</i>
    <%= select_tag 'inputs_filter', options_from_collection_for_select(@agents, "id", "title"), include_blank: true %>
  </div>
  <div class="small-12 medium-2 large-2 columns">
    <label for="inputs" class="right inline">Integration</label>
  </div>
  <div class="small-12 medium-4 large-4 columns">
    <i class="label info lifebuoy">Select the Integration from which you want to see the events</i>
    <%= select_tag 'integrations_filter', options_from_collection_for_select(@integrations, "id", "title"), include_blank: true %>
  </div>
</div>