<% content_for :title, "#{@agent.title} - #{ENV["APP_TITLE"]}" %>
<div class="row">
  <div class="small-12 columns">
    <h3 class="subheader"><%= @agent.title %></h3>
  </div>
</div>
<!-- main content -->
<% unless flash[:notice].nil? then %>
<div data-alert class="alert-box warning radius">
  <%= flash[:notice].html_safe %>
  <a href="#" class="close">&times;</a>
</div>
<% end %>
<%= render :partial => "agents/show", locals: {:agent => @agent} %><div class="row">
  <div class="small-12 columns right">
    <%= link_to 'Remove', @agent, :tabindex => autotab, :class => 'icon-delete remove right', method: :delete, data: { confirm: "Are you sure you want to remove the #{@agent.title} input?" } %>
  </div>
</div>