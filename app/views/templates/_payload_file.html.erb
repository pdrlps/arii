<div class="row">
  <div class="small-3 columns">
    <label for="publisher_file_method" class="right inline">Method</label>
  </div>
  <div class="small-9 columns">
   <%= select_tag 'template[method]', options_for_select([['Append', 'append'], ['Create', 'create'], ['Delete', 'delete']], {:selected => template.method}), {:id => 'publisher_file_method', :tabindex => autotab} %>
 </div>
</div>
<div class="row">
  <div class="small-3 columns">
    <label for="publisher_file_uri" class="right inline">URI</label>
  </div>
  <div class="small-9 columns">
    <input type="text" required id="publisher_file_uri" tabindex="<%= autotab %>" value="<%= template.uri.nil? ? '' : template.uri %>" name="template[uri]" placeholder="E.g.: file:///home/user/this.csv" />
  </div>
</div>
<div class="row">
  <div class="small-3 columns">
    <label for="publisher_file_content" class="right inline">Content</label>
  </div>
  <div class="small-9 columns">
    <textarea type="text" required id="publisher_file_content" tabindex="<%= autotab %>" name="template[content]" placeholder="E.g.: %{arii.date},%{id}\n"><%= template.content.nil? ? '' : template.content %></textarea>
  </div>
</div>