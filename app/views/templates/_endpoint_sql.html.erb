<div class="row">
  <div class="small-3 columns">
    <label for="publisher_sql_server" class="right inline">Server</label>
  </div>
  <div class="small-9 columns">
    <i class="label info lifebuoy">Select the database management systems (further options will be available in the future).</i>
    <%= select_tag 'template[server]', options_for_select([['MySQL', 'mysql'], ['Postgres', 'postgresql']], {:selected => template.server}), {:id => 'publisher_sql_server', :tabindex => autotab} %>
  </div>
</div>
<div class="row">
  <div class="small-3 columns">
    <label for="publisher_sql_host" class="right inline">Host</label>
  </div>
  <div class="small-9 columns">
    <i class="label info lifebuoy">Provide the database host server address.</i>
    <input type="text" id="publisher_sql_host" tabindex="<%= autotab %>" value="<%= template.host.nil? ? '' : template.host %>" name="template[host]" placeholder="E.g.: localhost" />
  </div>
</div>
<div class="row">
  <div class="small-3 columns">
    <label for="publisher_sql_port" class="right inline">Port</label>
  </div>
  <div class="small-9 columns">
    <i class="label info lifebuoy">Provide the database server port.</i>
    <input type="number"  pattern="number" id="publisher_sql_port" tabindex="<%= autotab %>" value="<%= template.port.nil? ? '' : template.port %>" name="template[port]"placeholder="E.g.: 3306" />
  </div>
</div>
<div class="row">
  <div class="small-3 columns">
    <label for="publisher_sql_database" class="right inline">Database</label>
  </div>
  <div class="small-9 columns">
    <i class="label info lifebuoy">Provide the database name.</i>
    <input type="text" id="publisher_sql_database" tabindex="<%= autotab %>" value="<%= template.database.nil? ? '' : template.database %>" name="template[database]" placeholder="E.g.: ariip" />
  </div>
</div>
<div class="row">
  <div class="small-3 columns">
    <label for="publisher_sql_username" class="right inline">Username</label>
  </div>
  <div class="small-9 columns">
    <i class="label info lifebuoy">Provide the database connection user name.</i>
    <input type="text" id="publisher_sql_username" tabindex="<%= autotab %>" value="<%= template.username.nil? ? '' : template.username %>" name="template[username]" placeholder="E.g.: root" />
  </div>
</div>
<div class="row">
  <div class="small-3 columns">
    <label for="publisher_sql_password" class="right inline">Password</label>
  </div>
  <div class="small-9 columns">
    <i class="label info lifebuoy">Provide the database connection user password.</i>
    <input type="text" id="publisher_sql_password" tabindex="<%= autotab %>" value="<%= template.password.nil? ? '' : template.password %>" name="template[password]"placeholder="E.g.: 12345" />
  </div>
</div>
<div class="row">
  <div class="small-3 columns">
    <label for="publisher_sql_query" class="right inline">Query</label>
  </div>
  <div class="small-9 columns">
    <i class="label info lifebuoy">Provide a SQL query for execution in the database. This is the data delivery.</i>
    <textarea id="publisher_sql_query" tabindex="<%= autotab %>"  name="template[query]"placeholder="E.g.: INSERT INTO..."><%= template.query.nil? ? '' : template.query %></textarea>
  </div>
</div>